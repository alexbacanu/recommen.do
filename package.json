  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "$PLASMO_PUBLIC_FIREFOX_EXT_ID",
        "strict_min_version": "90.0"
      }
    },
    "permissions": [
      "storage"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/*"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
