    "lint": "next lint",
    "prettier": "prettier --check .",
    "fix": "prettier --write . && next lint --fix",
    "cdeploy": "run-s cdeploy:*",
    "cdeploy:fix": "prettier --write . && next lint --fix",
    "cdeploy:clean": "(IF EXIST .next rmdir /s /q .next) && (IF EXIST .plasmo rmdir /s /q .plasmo) && (IF EXIST build rmdir /s /q build) && del /q /s public\\download\\*",
