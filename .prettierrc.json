{
  "arrowParens": "always",
  "bracketSpacing": true,
  "endOfLine": "auto",
  "printWidth": 120,
  "quoteProps": "as-needed",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all",

  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],

  "importOrder": ["^lib/(.*)$", "^styles/(.*)$", "^components/(.*)$", "^[~/]"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
